{{!-- Pet page --}}

<main class="pet">
    <div class="pet-profile">
        <img src="{{pet.picture}}" alt="{{pet.name}}" style="width: 200px;">
        {{#if isCreator}}
        <div class="update-pet">
            <a href="/pets/edit/{{pet._id}}">Update <span class="material-icons-outlined">edit</span></a>
        </div>
        <div class="delete-pet">
            <a href="/pets/delete/{{pet._id}}">Delete <span class="material-icons-outlined">delete</span></a>
        </div>
        {{/if}}
        {{#if isFavorite}}
        <div class="dislike-pet">
            <a href="/removeFromFavourites/{{pet._id}}">Unlike <span class="material-icons-outlined">favorite_border</span></a>
        </div>
        {{else}}
        <div class="like-pet">
            <a href="/addToFavourites/{{pet._id}}">Like <span class="material-icons-outlined">favorite</span></a>
        </div>
        {{/if}}
    </div>
    <div class="pet-details">
        <table>
            <thead>
                <tr>
                    <th colspan="2">{{pet.name}}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>{{pet.name}}</td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td>{{pet.age}}</td>
                </tr>
                <tr>
                    <td>Gender</td>
                    <td>{{pet.gender}}</td>
                </tr>
                <tr>
                    <td>Type of Animal</td>
                    <td>{{pet.typeOfAnimal}}</td>
                </tr>
                <tr>
                    <td>Breed</td>
                    <td>{{pet.breed}}</td>
                </tr>
                <tr>
                    <td>Zip Code</td>
                    <td>{{pet.zip}}</td>
                </tr>
                <tr>
                    <td>Adoption Status</td>
                    <td>{{pet.adoptionStatus}}</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>{{pet.description}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="pet-comments">

    </div>
</main>