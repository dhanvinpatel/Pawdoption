{{!-- Profile Page --}}

<main class="profile">
    <div class="user-details">
        <div class="profile-img">
            <img src="/public/img/user/user.png" alt="User profile picture" style="width: 100px;">
            <p>{{user.firstName}} {{user.lastName}}</p>
            <p>{{user.email}}</p>
        </div>
        <div class="user-info">
            <h1>Personal Information</h1>
            <p>First Name: {{user.firstName}}</p>
            <p>Last Name: {{user.firstName}}</p>
            <p>Email: {{user.email}}</p>
        </div>
    </div>

    <div class="favorite-pets">
        <h2>Favorite Pets</h2>
        <ul class="fav-pets-list">
            {{#each pets as |pet key|}}
            <li class="fav-pet">
                <a href="/pet">
                    <div class="fav-pet-details">
                        <img src="{{pet.picture}}" alt="Pet image" style="width: 100px;">
                        <p>Name: {{pet.name}}</p>
                        <p>Age: {{pet.age}}</p>
                        <p>Gender: {{pet.gender}}</p>
                        <p>Breed: {{pet.breed}}</p>
                    </div>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
</main>