{{!-- Sign in page --}}

<main class="signin">
    <div class="card-layout">
        <div class="signin-container">
            <h1>Welcome to Pawdoption&#33;</h1>
            <p class="signin-msg">Sign into your account</p>
            <form action="/signin" method="post" id="signinForm" autocomplete="off">
                <div class="signin-input">
                    <label for="emailAddress">Email</label>
                    <input type="email" name="emailAddress" id="emailAddress" required>
                    <p></p>
                </div>
                <div class="signin-input">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" required>
                    <p></p>
                </div>
                <div class="signin-submit">
                    <button type="submit" class="btn-signin">Sign In</button>
                </div>
                <div class="new-user" id="newUser">
                    <p>New to Pawdoption&#63; <a href="/signup">Join Now</a></p>
                </div>
            </form>
        </div>
    </div>
</main>